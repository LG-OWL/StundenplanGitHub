@model IEnumerable<Stundenplan.Data.Stunden>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Wochentag)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stunde)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fach)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Schulklasse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Wochentag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stunde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Schulklasse.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
