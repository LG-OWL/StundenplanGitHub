@{
    ViewData["Title"] = "Home Page";
}

@using Stundenplan.ViewModels
@model KlasseTestwerteViewModel

<style>
    table {
        width: 100%;
        text-align: center;
    }

    tr, td {
        border: 1px solid black;
        height: 50px;
    }

    .bold {
        font-weight: bold;
    }
</style>

<table>
    <tr>
        <td></td>
        <td class="bold">Montag</td>
        <td class="bold">Dienstag</td>
        <td class="bold">Mittwoch</td>
        <td class="bold">Donnerstag</td>
        <td class="bold">Freitag</td>
    </tr>
    @for (int i = 1; i <= 6; i++)
    {
        <tr>
            <td>@i</td>
            <td>@Model.Stunden.Where(s => s.Stunde == i).Where(s => s.Wochentag == "Montag").FirstOrDefault().Fach</td>
            <td>@Model.Stunden.Where(s => s.Stunde == i && s.Wochentag == "Dienstag").FirstOrDefault().Fach</td>
            <td>@Model.Stunden.Where(s => s.Stunde == i && s.Wochentag == "Mittwoch").FirstOrDefault().Fach</td>
            <td>@Model.Stunden.Where(s => s.Stunde == i && s.Wochentag == "Donnerstag").FirstOrDefault().Fach</td>
            <td>@Model.Stunden.Where(s => s.Stunde == i && s.Wochentag == "Freitag").FirstOrDefault().Fach</td>
        </tr>

    }
</table>